node{
 stage('SCM Checkout'){
         git 'https://github.com/dileep2018/newproject'
   }  
   
   task 'Build'
   echo 'Buliding Code'
   def mvnHome = tool name: 'maven-3', type: 'maven'
   def mvnCMD="${mvnHome}/bin/mvn"
   sh "${mvnCMD} clean package -Dspring.config.name=applictaion-test -f pom.xml"
   sleep3
   
   task'Functional Testing'
   echo 'Functional Testing'
   sleep3
   }
   stage('Compile-test'){
       // Get maven home path
       def mvnHome = tool name: 'maven-3', type: 'maven'
       sh "${mvnHome}/bin/mvn test"
   }
   stage('Clean-Package'){
      // Get maven home path
      def mvnHome = tool name: 'maven-3', type: 'maven'   
      sh "${mvnHome}/bin/mvn package" 
   }
   stage('NexusDeploy'){
       // Get maven home path
       def mvnHome = tool name: 'maven-3' , type: 'maven'
       sh "${mvnHome}/bin/mvn deploy"
   }
   stage('Build Docker Image'){
      sh 'docker build -t dileep/myimage:0.0.1 .'
   }
   stage('Push to Docker Hub'){
 
	withCredentials([file(credentialsId: '', variable: 'mydocker')]) {
        sh "docker login -u dileepdevops8@gmail.com -p ${mydocker}"
     }
     sh 'docker build -t dileep/myimage:0.0.1 .'
   }  
